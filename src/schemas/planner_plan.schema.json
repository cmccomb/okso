{
  "title": "Tool-based plan",
  "description": "Structured planner response consumed by the executor.",
  "type": "object",
  "required": ["plan"],
  "properties": {
    "plan": {
      "type": "array",
      "minItems": 1,
      "description": "Ordered steps pairing tools with arguments and short reasoning.",
      "items": {
        "type": "object",
        "required": ["tool", "args", "thought"],
        "additionalProperties": false,
        "properties": {
          "thought": {
            "type": "string",
            "description": "Brief rationale for the step.",
            "minLength": 1
          },
          "tool": {
            "type": "string",
            "description": "Tool to invoke.",
            "minLength": 1
          },
          "args": {
            "type": "object",
            "description": "Arguments for the chosen tool.",
            "additionalProperties": true,
            "propertyNames": {
              "type": "string",
              "not": { "const": "args_control" }
            }
          },
          "args_control": {
            "type": "object",
            "description": "Per-argument fill hints: context (executor fills) or locked (planner provided).",
            "additionalProperties": {
              "type": "string",
              "enum": ["context", "locked"]
            }
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "tool": {
                  "enum": [
                    "calendar_list",
                    "mail_list_inbox",
                    "mail_list_unread",
                    "notes_list",
                    "executor_fallback",
                    "reminders_list"
                  ]
                }
              }
            },
            "then": {
              "properties": {
                "args": { "minProperties": 0 }
              }
            },
            "else": {
              "properties": {
                "args": { "minProperties": 1 }
              }
            }
          }
        ],
        "examples": [
          {
            "tool": "terminal",
            "args": { "command": "pwd" },
            "args_control": { "command": "locked" },
            "thought": "Inspect the working directory."
          },
          {
            "tool": "final_answer",
            "args": { "input": "Summarize findings." },
            "args_control": { "input": "context" },
            "thought": "Share the result."
          }
        ]
      }
    }
  },
  "additionalProperties": false
}
